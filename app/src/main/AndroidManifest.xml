<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ebebewa_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_ebebewa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_ebebewa_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:roundIcon">
        <activity android:name="com.example.ebebewa_app.LoginSelectionActivity"/>
        <activity android:name="com.example.ebebewa_app.activities.PaymentsAcivity" />
        <activity android:name="com.example.ebebewa_app.VerifyActivity" />
        <activity android:name="com.example.ebebewa_app.activities.job_applicants.JobApplicantsActivity" />
        <activity
            android:name="com.example.ebebewa_app.activities.EditPostedJobActivity"
            android:label="Edit Delivery Job" />
        <activity android:name="com.example.ebebewa_app.activities.PrivacyPolicyActivity" />
        <activity android:name="com.example.ebebewa_app.activities.AboutUsActivity" />
        <activity
            android:name="com.example.ebebewa_app.activities.HomeActivityDriver"
            android:theme="@style/NoToolBarOnly" />
        <activity
            android:name="com.example.ebebewa_app.activities.HomeActivityClient"
            android:theme="@style/NoToolBarOnly" />
        <activity
            android:name="com.example.ebebewa_app.activities.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="com.example.ebebewa_app.LoginSelectionActivity"/>
        <activity android:name="com.example.ebebewa_app.activities.MainActivity" />

        <activity
            android:name="com.example.ebebewa_app.CheckUpdateActivity"
            android:theme="@style/NoToolBarAndStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ebebewa_app.activities.registration.helpers.NewDriverReg"
            android:theme="@style/AppThemeMaterialStyle" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.example.ebebewa_app.activities.registration.helpers.NewClientReg"
            android:theme="@style/AppThemeMaterialStyle" />
        <activity android:name="com.example.ebebewa_app.activities.FaqActivity" />
        <activity
            android:name="com.example.ebebewa_app.activities.post_job.PostDeliveryJobActivity"
            android:label="Post Delivery Job"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name="com.example.ebebewa_app.activities.TermsConditionsActivity" />
        <activity android:name="com.example.ebebewa_app.IPayActivity" />
        <activity
            android:name="com.example.ebebewa_app.activities.IntroActivity"
            android:theme="@style/NoToolBarAndStatusBar" />
        <activity android:name="com.example.ebebewa_app.activities.InviteActivity" />
        <activity android:name="com.example.ebebewa_app.WhereFromActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.ebebewa_app.DateTimeSelectionActivity"/>
        <activity android:name="com.example.ebebewa_app.LocationLuggageDescActivity"/>
        <activity android:name="com.example.ebebewa_app.TransportMode" />
        <activity android:name="com.example.ebebewa_app.activities.ClientWelcomeActivity" />
        <activity android:name="com.example.ebebewa_app.SummaryActivity" />
        <activity android:name="com.example.ebebewa_app.JobPostingSuccessActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>